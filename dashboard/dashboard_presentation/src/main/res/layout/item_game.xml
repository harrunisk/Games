<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GameItem.Wrapper">

    <ImageView
        android:id="@+id/imageViewBackground"
        style="@style/GameItem.Image"/>

    <LinearLayout style="@style/GameItem.Wrapper.Inner">

        <TextView
            android:id="@+id/textViewName"
            style="@style/GameItem.Title"/>

        <TextView
            android:id="@+id/textViewRating"
            style="@style/GameItem.Rating"/>

        <TextView
            android:id="@+id/textViewReleaseDate"
            style="@style/GameItem.ReleaseDate"/>

    </LinearLayout>

</RelativeLayout>